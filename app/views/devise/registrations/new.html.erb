<div class="col-lg-6 col-lg-offset-2">
  <div class="col-lg-6 col-lg-offset-6">
    <h2>Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label :email, "Email", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username, "Username", class: "col-sm-4 control-label" %>
        <div class='col-sm-8'>
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "col-sm-4 control-label" %>
        <div class='col-sm-8'>
          <%= f.password_field :password, autocomplete: "off", placeholder: "8 characters minimum", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", class: "col-sm-4 control-label" %>
        <div class='col-sm-8'>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "8 characters minimum", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <div class="col-lg-6 col-lg-offset-6">
          <%= f.submit "Sign up", class: 'btn btn-lg btn-success' %>
        </div>
      </div>

    </div>
  <% end %>
</div>


